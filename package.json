{
  "name": "layr",
  "displayName": "Layr - AI Planning Layer",
  "description": "Transform your ideas into structured project plans with AI-powered planning for VS Code.",
  "version": "0.0.4",
  "publisher": "ManasDutta",
  "icon": "layr.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/manasdutta04/layr"
  },
  "pricing": "Free",
  "sponsor": {
    "url": "https://github.com/sponsors/manasdutta04"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "AI",
    "Keymaps",
    "Other"
  ],
  "activationEvents": [
    "onCommand:layr.createPlan",
    "onCommand:layr.executePlan",
    "onCommand:layr.debug",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "layr.debug",
        "title": "Debug API Key",
        "category": "Layr"
      },
      {
        "command": "layr.createPlan",
        "title": "Create Plan",
        "category": "Layr"
      },
      {
        "command": "layr.executePlan",
        "title": "Execute Plan",
        "category": "Layr"
      }
    ],
    "configuration": {
      "title": "Layr",
      "properties": {
        "layr.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for your selected AI provider",
          "scope": "application",
          "order": 1
        },
        "layr.aiModel": {
          "type": "string",
          "enum": [
            "gemini-2.5-flash",
            "gemini-2.5-pro",
            "gemini-1.5-pro",
            "gemini-1.5-flash",
            "gemini-pro",
            "gpt-4",
            "gpt-4-turbo",
            "gpt-3.5-turbo",
            "gpt-4o",
            "gpt-5-medium",
            "gpt-5-high",
            "claude-3-sonnet",
            "claude-3-opus",
            "claude-3-haiku",
            "claude-3.7-sonnet",
            "claude-4-sonnet",
            "kimi-k2-0905",
            "deepseek-v3.1",
            "grok-4",
            "o3"
          ],
          "default": "gemini-2.5-flash",
          "order": 2,
          "description": "AI model to use",
          "scope": "application",
          "order": 3
        },
        "layr.openaiOrganization": {
          "type": "string",
          "default": "",
          "description": "OpenAI Organization ID (optional, only for OpenAI)",
          "scope": "application",
          "order": 6
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "@types/node-fetch": "^2.6.13",
    "dotenv": "^17.2.3",
    "node-fetch": "^3.3.2"
  }
}
